{
  "name": "django-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "manage.py",
  "author": "Keelan Fischer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keelhub/HomeServer.git"
  },
  "bugs": {
    "url": "https://github.com/keelhub/HomeServer/issues"
  },
  "homepage": "https://github.com/keelhub/HomeServer#readme",
  "scripts": {
    "start": "npm run start:tunnel",
    "build": "cross-env NODE_ENV=production webpack --config internals/webpack/webpack.prod.babel.js --color -p",
    "prebuild": "npm run test && npm run build:clean",
    "build:clean": "rimraf ./build/*",
    "analyze": "node ./internals/scripts/analyze.js",
    "start:tunnel": "cross-env NODE_ENV=development node server",
    "start:prod": "cross-env NODE_ENV=production node server",
    "pagespeed": "node ./internals/pagespeed.js",
    "presetup": "npm i chalk",
    "generate": "plop --plopfile internals/generators/index.js",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:js:staged": "eslint-staged",
    "lint:css": "stylelint ./static/css/*.css",
    "lint:css:staged": "stylelint-staged",
    "lint:staged": "npm run lint:js:staged && npm run lint:css:staged",
    "pretest": "npm run lint",
    "test": "cross-env NODE_ENV=test karma start internals/karma.js --single-run",
    "test:watch": "npm run test -- --auto-watch --no-single-run",
    "test:firefox": "npm run test -- --browsers Firefox",
    "test:safari": "npm run test -- --browsers Safari",
    "test:ie": "npm run test -- --browsers IE",
    "coveralls": "cat ./coverage/lcov/lcov.info | coveralls"
  },
  "pre-commit": "lint:staged",
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true,
      "node": true,
      "mocha": true,
      "es6": true
    },
    "plugins": [
      "react",
      "jsx-a11y"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "import/no-unresolved": 2,
      "comma-dangle": [
        2,
        "never"
      ],
      "indent": [
        2,
        4,
        {
          "SwitchCase": 2
        }
      ],
      "no-console": 1,
      "max-len": 0,
      "prefer-template": 2,
      "no-use-before-define": 0,
      "newline-per-chained-call": 0,
      "arrow-body-style": [
        2,
        "as-needed"
      ],
      "jsx-a11y/href-no-hash": 2,
      "jsx-a11y/label-has-for": 2,
      "jsx-a11y/mouse-events-have-key-events": 2,
      "jsx-a11y/role-has-required-aria-props": 2,
      "jsx-a11y/role-supports-aria-props": 2,
      "jsx-a11y/aria-props": 2
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "./internals/webpack.test.js"
        }
      }
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "color-hex-case": "upper",
      "string-quotes": "single",
      "font-family-name-quotes": "single-where-recommended",
      "indentation": 4
    }
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "js-cookie": "^2.1.1",
    "marked": "^0.3.5"
  },
  "devDependencies": {
    "babel-cli": "^6.7.7",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "coffee-loader": "^0.7.2",
    "coffee-script": "^1.10.0",
    "cross-env": "^1.0.7",
    "cssmin": "^0.4.3",
    "eslint": "^2.10.2",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.8.0",
    "eslint-plugin-jsx-a11y": "^1.2.2",
    "eslint-plugin-react": "^5.1.1",
    "grunt": "^1.0.1",
    "grunt-contrib-cssmin": "^1.0.1",
    "grunt-contrib-sass": "^1.0.0",
    "jquery": "^2.2.3",
    "jshint": "^2.9.2",
    "lint-staged": "^0.2.2",
    "ngrok": "^2.1.8",
    "pre-commit": "^1.1.3",
    "psi": "^2.0.3",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "stylelint": "^6.5.0",
    "stylelint-config-standard": "^8.0.0",
    "uglify-js": "^2.6.2",
    "webpack": "^1.13.0"
  }
}
